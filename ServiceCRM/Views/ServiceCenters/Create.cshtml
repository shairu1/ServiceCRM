@model CreateServiceViewModel
@{
    ViewData["Title"] = "Создать новый сервис";
}

<style>
    :root {
        --bg-color: #f6f8fa;
        --text-color: #1f2328;
        --text-muted: #656d76;
        --border-color: #d0d7de;
        --btn-success: #22c55e;
        --btn-success-hover: #16a34a;
        --navbar-text: #24292f;
    }

    body.dark-mode {
        --bg-color: #0d1117;
        --text-color: #c9d1d9;
        --text-muted: #8b949e;
        --border-color: #30363d;
        --btn-success: #3fb950;
        --btn-success-hover: #238636;
        --navbar-text: #ffffff;
    }

    body {
        background-color: var(--bg-color);
        color: var(--text-color);
        font-family: 'Inter', sans-serif;
        min-height: 100vh;
        transition: background-color 0.3s, color 0.3s;
    }

    .text-center h3 {
        color: var(--navbar-text);
        font-weight: 700;
        font-size: 1.5rem;
        margin-bottom: 2rem;
    }

    .form-control {
        border-radius: 0.75rem;
        padding: 0.65rem 1rem;
        width: 100%;
        max-width: 100%;
        background-color: var(--bg-color);
        border: 1px solid var(--border-color);
        color: var(--text-color);
        transition: background-color 0.3s, color 0.3s, border-color 0.3s;
    }

    body.dark-mode .form-control:focus {
        background-color: #161b22;
        color: #c9d1d9;
        border-color: var(--btn-success);
        box-shadow: 0 0 0 0.2rem rgba(59,184,80,0.25);
    }

    body:not(.dark-mode) .form-control:focus {
        background-color: #ffffff;
        color: var(--text-color);
        border-color: var(--btn-success);
        box-shadow: 0 0 0 0.2rem rgba(34,197,94,0.25);
    }

    .btn-success {
        border-radius: 0.75rem;
        padding: 0.65rem;
        font-weight: 600;
        background-color: var(--btn-success);
        border: none;
        color: #fff;
        transition: all 0.2s;
    }

        .btn-success:hover {
            background-color: var(--btn-success-hover);
        }

    .text-muted {
        color: var(--text-muted) !important;
    }
</style>

<div class="container mt-5 d-flex justify-content-center">
    <div class="col-md-5">

        <div class="text-center">
            <h3>Создать новый сервис</h3>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }

        <form asp-action="Create" method="post" class="needs-validation" novalidate id="createServiceForm">

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Название сервиса</label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-success">Создать сервис</button>
            </div>

            <div class="text-center">
                <a asp-action="Index" class="text-decoration-none text-muted">← Вернуться в настройки</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
